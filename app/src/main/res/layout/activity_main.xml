<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bb"

    tools:context=".MainActivity">



    <TextView

        android:id="@+id/nameTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentLeft="true"
        android:text="Name"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="100dp"
        style="@style/myStyle"

        ></TextView>

    <EditText
        android:id="@+id/nameField"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/nameTxt"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="80dp"
        android:background="@drawable/qqqq"



        ></EditText>


    <TextView

        android:id="@+id/heightTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/nameField"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="80dp"
        android:layout_marginTop="30dp"
        android:text="Height"
        style="@style/myStyle"
        ></TextView>

    <EditText
        android:id="@+id/heightField"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/heightTxt"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="80dp"
        android:background="@drawable/qqqq"


        ></EditText>
    <TextView
        style="@style/myStyle"
        android:id="@+id/weightTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/heightField"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="80dp"
        android:layout_marginTop="30dp"

        android:text="Weight"
        ></TextView>
    <EditText
        android:id="@+id/weightField"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/weightTxt"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="80dp"
        android:background="@drawable/qqqq"
        ></EditText>

    <TextView
        style="@style/myStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/genderTxt"
        android:layout_below="@id/weightField"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="80dp"



        android:layout_marginTop="30dp"
        android:text="gender"
        ></TextView>

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="80dp"
        android:layout_below="@id/genderTxt"

        android:layout_marginTop="15dp"
        android:id="@+id/spn"
        android:theme="@style/AppTheme.Picker"
        android:textColor="@android:color/black"
        ></Spinner>

    <CheckBox
        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        android:text="Remember me"
        android:id="@+id/chkRemember"
        android:layout_below="@id/spn"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="80dp"
        style="@style/CheckBoxTheme"

        ></CheckBox>

    <Button
        android:id="@+id/mainButton"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Continue"
        android:layout_below="@+id/chkRemember"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="80dp"
        android:onClick="continueOnClick"
        android:layout_marginTop="30dp"



        ></Button>


</RelativeLayout>