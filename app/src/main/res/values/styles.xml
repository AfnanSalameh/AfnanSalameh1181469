<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="myStyle">
        <item name="android:textSize">10pt</item>
        <item name="android:textColor">#FFFFFF</item>

    </style>


    <style name="normalStyle">
        <item name="android:textSize">5pt</item>
        <item name="android:textColor">#FFFFFF</item>

    </style>


    <style name="editTextStyle">
        <item name="editTextColor">#FFFFFF</item>

    </style>

    <style name="MyEditTextStyle" parent="android:Widget.EditText">
        <item name="android:textColor">#400000</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">10dp</item>
        <item name="android:typeface">monospace</item>
        <item name="android:background">@android:drawable/editbox_dropdown_light_frame</item>
        <item name="android:textSize">20sp</item>

    </style>

    <style name="checkBox">
        <item name="editTextColor">#fff</item>
        <item name="android:colorBackground">#A9A9A9</item>

    </style>
    <style name="CheckBoxTheme" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">#FFC107</item>
        <item name="colorControlActivated">#9C27B0</item>
        <item name="android:textColor">#fff</item>
        <item name="buttonTint">#fff</item>
    </style>


    <style name="numberPicker">
        <item name="buttonTint">#fff</item>
        <item name="android:textColor">#FFFFFF</item>


    </style>

    <style name="timerStyle">
        <item name="android:textSize">14pt</item>
        <item name="android:textColor">#FFFFFF</item>

    </style>


    <style name="AppTheme.Picker" parent="Theme.AppCompat.Light.NoActionBar" >

        <item name="android:editTextColor">#fff</item>

    </style>
    <style name="timerTextStyke">
        <item name="android:textSize">30pt</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

</resources>